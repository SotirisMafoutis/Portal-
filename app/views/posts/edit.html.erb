<style>
  /* Φόντο σελίδας */
  .page-wrapper {
    background-color: #f0f2f5;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 60px 20px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  /* Κεντρική Κάρτα */
  .main-card {
    background: #ffffff;
    width: 100%;
    max-width: 800px;
    border-radius: 12px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.1);
  }

  /* Header Section */
  .card-header {
    padding: 30px 40px;
    display: flex;
    align-items: center;
    gap: 20px;
    border-bottom: 1px solid #eee;
  }

  .icon-box {
    background: #e7f3ff;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .header-titles h1 {
    margin: 0;
    font-size: 24px;
    color: #1c1e21;
    font-weight: 700;
  }

  .header-titles p {
    margin: 4px 0 0;
    color: #65676b;
    font-size: 15px;
  }

  /* Γκρι πλαίσιο φόρμας (Όπως στην εικόνα) */
  .form-body {
    background: #f8f9fa;
    margin: 25px 40px;
    padding: 30px;
    border-radius: 8px;
    border: 1px solid #e4e6eb;
  }

  .section-title {
    font-size: 17px;
    font-weight: 600;
    color: #4b4f56;
    margin-bottom: 25px;
    display: block;
  }

  /* Rows & Inputs */
  .field-row {
    display: flex;
    margin-bottom: 20px;
    align-items: center;
  }

  .field-row label {
    width: 140px;
    color: #65676b;
    font-size: 14px;
    font-weight: 600;
    flex-shrink: 0;
  }

  .input-wrapper {
    flex: 1;
  }

  .styled-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #dddfe2;
    border-radius: 6px;
    font-size: 16px;
    box-sizing: border-box;
    background: #fff;
  }

  .styled-input:focus, .styled-textarea:focus {
    border-color: #1877f2;
    box-shadow: 0 0 0 2px #e7f3ff;
    outline: none;
  }

  /* ΤΟ TEXTAREA ΜΕ ΤΟ ΠΟΛΥ ΚΕΝΟ */
  .styled-textarea {
    width: 100%;
    min-height: 400px; /* Τεράστιο κενό για περιεχόμενο */
    padding: 16px;
    border: 1px solid #dddfe2;
    border-radius: 6px;
    font-size: 16px;
    box-sizing: border-box;
    background: #fff;
    resize: vertical;
    font-family: inherit;
  }

  .hint-text {
    display: block;
    margin-top: 6px;
    color: #bcc0c4;
    font-size: 12px;
  }

  /* Footer & Buttons */
  .card-footer {
    padding: 20px 40px 40px;
    display: flex;
    justify-content: flex-end;
    gap: 12px;
    border-top: 1px solid #eee;
    background: #fff;
  }

  .btn-cancel-new {
    background: #e4e6eb;
    color: #4b4f56;
    padding: 10px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 15px;
    display: inline-flex;
    align-items: center;
    transition: background 0.2s;
  }

  .btn-cancel-new:hover {
    background: #d8dadf;
  }

  .btn-submit-new {
    background: #1877f2;
    color: white;
    padding: 10px 32px;
    border-radius: 6px;
    border: none;
    font-weight: 600;
    font-size: 15px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-submit-new:hover {
    background: #166fe5;
  }

  .error-msg {
    color: #f02849;
    font-size: 13px;
    margin-top: 15px;
    font-weight: 500;
  }
</style>

<div class="page-wrapper">
  <div class="main-card">
    
    <div class="card-header">
      <div class="icon-box">
        <svg viewBox="0 0 24 24" width="28" height="28" fill="none" stroke="#1877f2" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
      </div>
      <div class="header-titles">
        <h1>Δημιουργία Νέου Post</h1>
        <p>Συντάξτε το περιεχόμενό σας για την κοινότητα του Portal</p>
      </div>
    </div>

    <%= form_with(model: @post, local: true) do |f| %>
      <div class="form-body">
        <span class="section-title">Τίτλος Δημοσίευσης:</span>

        <div class="field-row">
          <label>Τίτλος</label>
          <div class="input-wrapper">
            <%= f.text_field :title, placeholder: "Tabel", class: "styled-input" %>
          </div>
        </div>

        <div class="field-row" style="align-items: flex-start;">
          <label style="margin-top: 12px;">Περιεχόμενο</label>
          <div class="input-wrapper">
            <%= f.text_area :content, placeholder: "Γράψτε εδώ...", class: "styled-textarea" %>
            
          </div>
        </div>

        <% if @post.errors.any? %>
          <div class="error-msg">
            Παρακαλούμε συμπληρώστε σωστά όλα τα πεδία.
          </div>
        <% end %>
      </div>

      <div class="card-footer">
        <%= link_to "Ακύρωση", posts_path, class: "btn-cancel-new" %>
        <%= f.submit "Δημοσίευση τώρα", class: "btn-submit-new" %>
      </div>
    <% end %>

  </div>
</div>