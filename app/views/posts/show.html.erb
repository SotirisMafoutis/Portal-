<style>
  .article-wrapper {
    background-color: #ffffff;
    min-height: 100vh;
    padding: 60px 20px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .article-container {
    width: 100%;
    max-width: 740px;
  }

  /* Navigation */
  .article-nav {
    margin-bottom: 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btn-back {
    text-decoration: none;
    color: #65676b;
    font-size: 15px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: color 0.2s;
  }

  .btn-back:hover {
    color: #1877f2;
  }

  /* Header Section */
  .article-header {
    margin-bottom: 35px;
    border-bottom: 1px solid #f0f2f5;
    padding-bottom: 30px;
  }

  .article-title {
    font-size: 42px;
    font-weight: 800;
    line-height: 1.15;
    color: #1c1e21;
    margin: 0 0 20px 0;
    letter-spacing: -1px;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: #e4e6eb;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22px;
  }

  .author-info h4 {
    margin: 0;
    font-size: 16px;
    color: #050505;
    font-weight: 600;
  }

  .author-info span {
    font-size: 14px;
    color: #65676b;
  }

  /* Content Section */
  .article-body {
    font-size: 20px;
    line-height: 1.6;
    color: #1c1e21;
    white-space: pre-wrap;
    margin-bottom: 50px;
    word-break: break-word;
  }

  /* Footer Actions */
  .article-footer {
    border-top: 1px solid #f0f2f5;
    padding-top: 30px;
    display: flex;
    gap: 15px;
  }

  .btn-edit-article {
    background: #e7f3ff;
    color: #1877f2;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    transition: background 0.2s;
  }

  .btn-edit-article:hover {
    background: #dbeafe;
  }

  .btn-delete-article {
    background: #fff0f0;
    color: #f02849;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 14px;
    transition: background 0.2s;
  }

  .btn-delete-article:hover {
    background: #ffe5e5;
  }
</style>

