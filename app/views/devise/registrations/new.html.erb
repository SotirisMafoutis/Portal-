<div style="display: flex; justify-content: center; align-items: center; min-height: 85vh; background-color: #f0f2f5; font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; padding: 20px 0;">
  
  <div style="background: white; padding: 40px; border-radius: 15px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); width: 100%; max-width: 400px; text-align: center;">
    
    <h2 style="margin-bottom: 10px; color: #1c1e21; font-size: 28px; font-weight: 800;">Δημιουργία Λογαριασμού</h2>
    <p style="color: #606770; margin-bottom: 30px; font-size: 15px;">Γίνετε μέλος στην κοινότητα του Portal</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# Email Field %>
      <div style="margin-bottom: 15px; text-align: left;">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", 
            style: "width: 100%; padding: 14px; border: 1px solid #dddfe2; border-radius: 8px; font-size: 16px; box-sizing: border-box; outline: none;" %>
      </div>

      <%# Password Field %>
      <div style="margin-bottom: 15px; text-align: left;">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Νέος Κωδικός (τουλ. 6 χαρακτήρες)",
            style: "width: 100%; padding: 14px; border: 1px solid #dddfe2; border-radius: 8px; font-size: 16px; box-sizing: border-box; outline: none;" %>
      </div>

      <%# Password Confirmation Field %>
      <div style="margin-bottom: 25px; text-align: left;">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Επιβεβαίωση Κωδικού",
            style: "width: 100%; padding: 14px; border: 1px solid #dddfe2; border-radius: 8px; font-size: 16px; box-sizing: border-box; outline: none;" %>
      </div>

      <%# Submit Button %>
      <div style="margin-bottom: 20px;">
        <%= f.submit "Εγγραφή", 
            style: "width: 100%; padding: 14px; background-color: #42b72a; color: white; border: none; border-radius: 8px; font-size: 18px; font-weight: bold; cursor: pointer;" %>
      </div>
    <% end %>

    <div style="display: flex; align-items: center; margin: 20px 0; color: #bec3c9;">
      <hr style="flex: 1; border: 0; border-top: 1px solid #dddfe2;">
      <span style="padding: 0 10px; font-size: 13px; text-transform: uppercase;">ή</span>
      <hr style="flex: 1; border: 0; border-top: 1px solid #dddfe2;">
    </div>

    <%# Google Sign Up Button %>
    <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, 
        style: "background: white; border: 1px solid #dddfe2; border-radius: 4px; padding: 0; display: inline-block; cursor: pointer; line-height: 0; overflow: hidden; font-size: 0;" do %>
      <%= image_tag "google.jpg", style: "display: block; width: 150px; height: auto;" %>
    <% end %>
    <p style="font-size: 12px; color: #606770; margin-top: 5px;">Εγγραφή μέσω Google</p>

    <div style="margin-top: 25px; border-top: 1px solid #f0f2f5; padding-top: 20px;">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>