<style>
  .auth-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f2f5;
    padding: 20px;
  }

  .auth-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
    padding: 40px;
    width: 100%;
    max-width: 420px;
  }

  .auth-logo {
    display: inline-block;
    background-color: #0084ff;
    color: white;
    font-size: 22px;
    font-weight: 800;
    padding: 8px 16px;
    border-radius: 8px;
    margin-bottom: 28px;
    box-shadow: 0 2px 8px rgba(0, 132, 255, 0.3);
  }

  .auth-title {
    font-size: 24px;
    font-weight: 700;
    color: #1a1a2e;
    margin: 0 0 6px 0;
  }

  .auth-subtitle {
    font-size: 14px;
    color: #888;
    margin: 0 0 28px 0;
  }

  .auth-field {
    margin-bottom: 18px;
  }

  .auth-field label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    color: #444;
    margin-bottom: 6px;
  }

  .auth-field input {
    width: 100%;
    padding: 12px 15px;
    border: 1.5px solid #e0e0e0;
    border-radius: 10px;
    font-size: 15px;
    outline: none;
    transition: border-color 0.2s;
    box-sizing: border-box;
    background: #fafafa;
  }

  .auth-field input:focus {
    border-color: #0084ff;
    background: white;
  }

  .auth-hint {
    font-size: 11px;
    color: #aaa;
    margin-top: 4px;
  }

  .auth-btn {
    width: 100%;
    padding: 13px;
    background: #0084ff;
    color: white;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 132, 255, 0.3);
    margin-top: 8px;
  }

  .auth-btn:hover {
    background: #0073e6;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 132, 255, 0.4);
  }

  .auth-links {
    margin-top: 20px;
    text-align: center;
    font-size: 13px;
    color: #888;
  }

  .auth-links a {
    color: #0084ff;
    text-decoration: none;
    font-weight: 600;
  }

  .auth-links a:hover {
    text-decoration: underline;
  }

  .auth-divider {
    border: none;
    border-top: 1px solid #f0f0f0;
    margin: 16px 0;
  }

  /* Error messages */
  #error_explanation {
    background: #fff0f0;
    border: 1px solid #ffcdd2;
    border-radius: 10px;
    padding: 12px 16px;
    margin-bottom: 20px;
  }

  #error_explanation h2 {
    font-size: 13px;
    font-weight: 700;
    color: #c62828;
    margin: 0 0 8px 0;
  }

  #error_explanation ul {
    margin: 0;
    padding-left: 18px;
    font-size: 13px;
    color: #c62828;
  }
</style>

<div class="auth-wrapper">
  <div class="auth-card">
    <a href="/" class="auth-logo">Portal</a>
    <h1 class="auth-title">Reset Password</h1>
    <p class="auth-subtitle">Ορίστε τον νέο σας κωδικό πρόσβασης</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="auth-field">
        <%= f.label :password, "Νέος κωδικός" %>
        <% if @minimum_password_length %>
          <div class="auth-hint">Τουλάχιστον <%= @minimum_password_length %> χαρακτήρες</div>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "••••••••" %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation, "Επιβεβαίωση κωδικού" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••" %>
      </div>

      <%= f.submit "Αλλαγή κωδικού", class: "auth-btn" %>
    <% end %>

    <div class="auth-links">
      <hr class="auth-divider">
      <%= link_to "Login", new_session_path(resource_name) %>
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        &nbsp;·&nbsp;
        <%= link_to "Sign up", new_registration_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
